<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitc.dream_com.mapper.PaymentMapper">

<!--    결제내역 불러오기-->
<!--    최종 수정일 2023-01-19-->
<!--    최종 작성자 : 양민호-->
    <select id="paymentData" resultType="com.bitc.dream_com.dto.PaymentDto">
        select p.*, pi.img_path, pr.product_title, pr.product_name, pr.product_discount, pm.method_name from payment p
            join product_img pi on p.product_num = pi.product_num
            join product pr on pr.product_num = p.product_num
            join payment_method pm on p.method_num = pm.method_num
        where p.user_id = #{userId} and pi.img_path like '%thumnail'
    </select>

<!--    결제취소-->
<!--    최종 수정일 2023-01-19-->
<!--    최종 작성자 : 양민호-->
    <update id="cancelPayment" parameterType="com.bitc.dream_com.dto.PaymentDto">
        update payment set state = 0
        where user_id = #{userId} and payment_num = #{paymentNum}
    </update>

<!--    구매 / 결제완료 (결제내역 추가)-->
<!--    최종 수정일 2023-01-19-->
<!--    최종 작성자 : 양민호-->
    <insert id="buy" parameterType="com.bitc.dream_com.dto.PaymentDto">
        insert into payment values(#{paymentNum}, #{paymentDate}, #{deliveryAddr}, #{methodNum}, #{userId}, #{productNum}, #{quantity}, #{price}, #{request}, 1)
    </insert>

<!--    전체 결제번호 데이터-->
<!--    최종 수정일 2023-01-19-->
<!--    최종 작성자 : 양민호-->
    <select id="usedNum" resultType="com.bitc.dream_com.dto.PaymentDto">
        select payment_num from payment
    </select>
</mapper>